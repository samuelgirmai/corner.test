{
  "config": {
    "target": "http://127.0.0.1:22000",
    "phases": [
      {
        "duration": 2,
        "arrivalRate": 1,
        "name": "Warm up"
      }
    ],
    "processor": "../logic/emr.js"
  },
  "scenarios": [
    {
      "name": "Laboratory scenario",
      "flow": [
        {
          "function": "get_auth"
        },
        {
          "function": "get_result"
        },
        {
          "function": "get_pii"
        },
        {
          "post": {
            "url": "/app/emr/mru/patient/write",
            "json": {
              "auth": "{{ auth }}",
              "param": "{{ param }}"
            },
            "capture": {
              "json": "$.result.patient.mrn",
              "as": "mrn"
            }
          }
        },
        {
          "post": {
            "url": "/app/emr/practner/patient/record/write",
            "json": {
              "auth": "{{ auth }}",
              "param": { "mrn": "{{ mrn}}" }
            },
            "capture": {
              "json": "$.result.rid",
              "as": "rid"
            }
          }
        },
        {
          "loop": [
            {
              "post": {
                "url": "/app/emr/lab/result/write",
                "json": {
                  "auth": "{{ auth }}",
                  "param": {
                    "mrn": "{{ mrn }}",
                    "rid": "{{ rid }}",
                    "result": "{{ result }}"
                  }
                },
                "capture": {
                  "json": "$.result.lid",
                  "as": "lid"
                }
              }
            },
            {
              "post": {
                "url": "/app/emr/lab/result/read",
                "json": {
                  "auth": "{{ auth }}",
                  "param": { 
                    "lid": "{{ lid}}" 
                  }
                }
             }
          }
          ],
          "count": "100"
        }
      ]
    }
  ]
}
