{
  "config": {
    "target": "http://127.0.0.1:22000",
    "phases": [
      {
        "duration": 2,
        "arrivalRate": 1,
        "name": "Warm up"
      }
    ],
    "processor": "../logic/emr.js"
  },
  "scenarios": [
    {
      "name": "Triage scenario",
      "flow": [
        {
          "function": "get_auth"
        },
        {
          "function": "get_assign"
        },
        {
          "function": "get_pii"
        },
        {
          "function": "get_opd"
        },
        {
          "post": {
            "url": "/app/emr/mru/patient/write",
            "json": {
              "auth": "{{ auth }}",
              "param": "{{ param }}"
            },
            "capture": {
              "json": "$.result.patient.mrn",
              "as": "mrn"
            }
          }
        },
        {
          "post": {
            "url": "/app/emr/practner/opd/write",
            "json": {
              "auth": "{{ auth }}",
              "param": { 
                "mrn": "{{ mrn }}" ,
                "dii": "{{ dii }}" 
               }
            },
            "capture": {
              "json": "$.result.opd_id",
              "as": "opd_id"
            }
          }
        },
        {
          "post": {
            "url": "/app/emr/triage/assign/write",
            "json": {
              "auth": "{{ auth }}",
              "param": {
                "mrn": "{{ mrn }}",
                "opd_id": "{{ opd_id }}",
                "status": "{{ status }}"
              }
            },
            "capture": {
              "json": "$.result.tid",
              "as": "tid"
            }
          }
        },
        {
          "loop": [
            {
              "post": {
                "url": "/app/emr/triage/assign/read",
                "json": {
                  "auth": "{{ auth }}",
                  "param": { 
                    "tid": "{{ tid }}" 
                  }
                }
             }
          },
          {
            "post": {
              "url": "/app/emr/triage/assign/status/update",
              "json": {
                "auth": "{{ auth }}",
                "param": {
                  "tid": "{{ tid}}",
                  "status": "{{ status }}"
                }
              }
            }
          }
          ],
          "count": "10"
        }
      ]
    }
  ]
}
