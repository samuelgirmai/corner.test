{
  "config": {
    "target": "http://127.0.0.1:22000",
    "phases": [
      {
        "duration": 10,
        "arrivalRate": 4,
        "name": "Warm up"
      },
      {
        "duration": 10,
        "arrivalRate": 20,
        "rampTo": 50,
        "name": "Incremental"
      },
      {
        "duration": 10,
        "arrivalRate": 70,
        "name": "Sustained max load"
      }
    ],
    "processor": "../logic/emr.js"
  },
  "scenarios": [
    {
      "name": "Practitioner scenario",
      "flow": [
        {
          "function": "get_auth"
        },
        {
          "function": "get_exam"
        },
        {
          "function": "get_pii"
        },
        {
          "post": {
            "url": "/app/emr/mru/patient/write",
            "json": {
              "auth": "{{ auth }}",
              "param": "{{ param }}"
            },
            "capture": {
              "json": "$.result.patient.mrn",
              "as": "mrn"
            }
          }
        },
        {
          "loop": [
            {
              "post": {
                "url": "/app/emr/practner/patient/record/write",
                "json": {
                  "auth": "{{ auth }}",
                   "param": { "mrn": "{{ mrn}}" }
                },
                "capture": {
                  "json": "$.result.rid",
                  "as": "rid"
                }
              }
            },
            {
              "post": {
                "url": "/app/emr/practner/patient/record/exam/update",
                "json": {
                  "auth": "{{ auth }}",
                  "param": {
                    "mrn": "{{ mrn }}",
                    "rid": "{{ rid }}",
                    "exam": "{{ exam }}"
                  }
                }
              }
            },
            {
              "post": {
              "url": "/app/emr/practner/patient/record/exam/read",
                "json": {
                  "auth": "{{ auth }}",
                  "param": { 
                    "mrn": "{{ mrn}}",
                    "rid": "{{ rid}}" 
                  }
                }
             }
          }
          ],
          "count": "2"
        }
      ]
    }
  ]
}
